    "# pip install pygame\n",
    "import pygame.mixer\n",
    "\n",
    "pygame.init()\n",
    "pygame.mixer.init()\n",
    "pygame.mixer.music.load(\"example.mid\")\n",
    "pygame.mixer.music.play()\n",
    "while pygame.mixer.music.get_busy():\n",
    "    pygame.time.wait(100000)"
